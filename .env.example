# LOCAL USE ONLY: Use the private IP found in AlloyDB > Instances.
# In Production, the Cloud Run Connector handles this automatically.
DATABASE_URL=postgresql://postgres:[PASSWORD]@[PRIVATE_IP]:5432/postgres

REDIS_URL=redis://[REDIS_IP]:6379


GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_ALLOYDB_CLUSTER=issue-index-FILLER
GCP_ALLOYDB_INSTANCE=issue-index-FILLER

FERNET_KEY=python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Generate with: openssl rand -base64 32
FINGERPRINT_SECRET=your_secret_here

# GITHUB OAUTH
GIT_CLIENT_ID=your_id
GIT_CLIENT_SECRET=your_secret
GIT_TOKEN=ghp_your_pat_for_ingestion

# GOOGLE OAUTH
GOOGLE_CLIENT_ID=your_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_secret

ENVIRONMENT=production
NEXT_PUBLIC_API_URL=https://your-backend-service.run.app
CORS_ORIGINS=https://your-frontend-domain.com

; RECO_FLUSH_SECRET is required for the internal flush endpoint.
RECO_FLUSH_SECRET=
RECO_EVENTS_FLUSH_BATCH_SIZE=1000

; Worker flush loop controls.
RECO_FLUSH_MAX_SECONDS=60